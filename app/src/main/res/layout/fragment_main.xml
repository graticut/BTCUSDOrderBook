<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivity">

    <include layout="@layout/ticker_layout" android:id="@+id/ticker_layout"/>

    <Button
        android:id="@+id/start"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ticker_layout"
        android:layout_centerHorizontal="true"
        android:text="ON"
        android:textSize="17sp"/>
    <Button
        android:id="@+id/stop"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ticker_layout"
        app:layout_constraintLeft_toRightOf="@+id/start"
        android:layout_centerHorizontal="true"
        android:text="OFF"
        android:textSize="17sp"/>
    <ScrollView
        android:id="@+id/output_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/start"
        app:layout_constraintLeft_toRightOf="@+id/stop">
        <TextView
            android:id="@+id/output"
            style="@style/BaseTextView"
            android:layout_height="100dp"/>
    </ScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/order_book"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/order_book_bg"
        app:layout_constraintTop_toBottomOf="@id/output_layout"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
